{
  "manifest_version": 3,
  "name": "Backlog_desktop_alert",
  "version": "1.0.0",
  "description": "Backlog の通知をデスクトップで表示します",
  "icons": {
    "16": "icons/task_alert16.png",
    "48": "icons/task_alert48.png",
    "128": "icons/task_alert128.png"
  },
  "permissions":[
    "storage",
    "notifications",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/task_alert16.png",
      "48": "icons/task_alert48.png",
      "128": "icons/task_alert128.png"
    }
  }
}